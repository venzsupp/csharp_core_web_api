{
    "version": "0.2.0",
    "configurations": [
      {
        "name": ".NET Attach (Docker)",
        "type": "coreclr",
        "request": "attach",
        "processId": "${command:pickProcess}",

        "pipeTransport": {
          "pipeProgram": "docker",
          "pipeArgs": ["exec", "-i", "csharp-api"],
          "debuggerPath": "/vsdbg/vsdbg",
          "pipeCwd": "${workspaceFolder}",
          "quoteArgs": false
        },
        "sourceFileMap": {
          "/var/www/html": "${workspaceFolder}"
        }
      }
    ]
  }
  